<style>
  /* Optional: Smooth spacing and shadow improvements */
  .alert {
    border-radius: 12px;
    font-size: 0.95rem;
  }

  @media (max-width: 576px) {
    .alert {
      font-size: 0.85rem;
      padding: 0.8rem;
    }
    .alert i {
      font-size: 1.1rem !important;
    }
  }
</style>

<!-- Success Message -->
<% if (success && success.length) { %>
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-11 col-sm-10 col-md-8 col-lg-6 col-xl-5">
        <div class="alert alert-success alert-dismissible fade show d-flex align-items-center p-3 mb-3 shadow-sm text-center" role="alert">
          <i class="bi bi-check-circle-fill me-2 fs-5 flex-shrink-0"></i>
          <div class="flex-grow-1"><%= success %></div>
          <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      </div>
    </div>
  </div>
<% } %>

<!-- Error Message -->
<% if (error && error.length) { %>
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-11 col-sm-10 col-md-8 col-lg-6 col-xl-5">
        <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center p-3 mb-3 shadow-sm text-center" role="alert">
          <i class="bi bi-exclamation-circle-fill me-2 fs-5 flex-shrink-0"></i>
          <div class="flex-grow-1"><%= error %></div>
          <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      </div>
    </div>
  </div>
<% } %>


